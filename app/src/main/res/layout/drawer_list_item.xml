<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <!-- Drawer Item Icon -->
    <IconTextView
        android:id="@+id/txt_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/drawer_item_icon_marg_left_right"
        android:layout_marginRight="@dimen/drawer_item_icon_marg_left_right"
        android:layout_centerVertical="true"
        android:textSize="@dimen/drawer_item_icon"
        android:textColor="@color/drawer_item_icon"/>

    <!-- Drawer Item Title -->
    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/txt_icon"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textColor="@color/drawer_list_item_title"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/drawer_list_item_padding_left_right"/>

</RelativeLayout>