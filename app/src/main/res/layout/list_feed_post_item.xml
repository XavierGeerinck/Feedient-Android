<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="0dp"
    android:background="@drawable/card">

    <!--  Header -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingTop="15dp">

        <LinearLayout
            android:id="@+id/container_thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="10dp">

            <ImageView
                android:id="@+id/img_thumbnail_user"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/avatar_image"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/container_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/container_thumbnail">

            <!-- Posted By User -->
            <TextView
                android:id="@+id/txt_user_posted_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\@thebillkidy"
                android:textColor="#040404"
                android:typeface="sans"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <!-- Date Posted -->
            <TextView
                android:id="@+id/txt_date_posted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 minutes ago"
                android:textSize="10sp"
                android:textColor="@color/txt_date_posted"
                android:textStyle="bold"
                android:layout_below="@id/txt_user_posted_by"/>
        </RelativeLayout>

        <!-- Provider Box -->
        <!-- Note: marginRight="-1dp" so that the 1px goes invisible -->
        <LinearLayout
            android:id="@+id/container_provider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/provider_border_feedient"
            android:minWidth="20dp"
            android:layout_marginRight="-1dp"
            android:paddingBottom="8dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="8dp">

            <!-- Provider Icon -->
            <IconTextView
                android:id="@+id/txt_provider_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="{fa-twitter}"
                android:textColor="#55acee"
                android:typeface="sans"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <!-- Provider User Name -->
            <TextView
                android:id="@+id/txt_provider_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\@thebillkidy"
                android:textColor="#C1C1C1"
                android:typeface="sans"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_alignRight="@id/txt_provider_icon"/>
        </LinearLayout>

    </RelativeLayout>

    <!-- Content -->
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip"
        android:layout_below="@id/header"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp">

        <!-- Message -->
        <TextView
            android:id="@+id/txt_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_user_posted_by"
            android:textColor="@color/txt_message"
            android:textSize="12dip"
            android:layout_marginTop="1dip"
            android:layout_toRightOf="@+id/thumbnail"
            android:text="Just gona stand there and ..."/>

    </LinearLayout>

    <!-- Content - Entities -->
    <LinearLayout
        android:id="@+id/layout_entities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/content"
        android:orientation="vertical">

    </LinearLayout>

    <!-- Social Actions -->
    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_entities"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp">

        <IconButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_border_feedient"
            android:id="@+id/btn_twitter_favorite"
            android:text="{fa-star}"
            android:textColor="#737373"
            android:textSize="18sp"
            android:layout_marginRight="10dp"
            android:minHeight="1dp"
            android:minWidth="1dp"/>

        <IconButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_border_feedient"
            android:id="@+id/btn_twitter_retweet"
            android:layout_toRightOf="@id/btn_twitter_favorite"
            android:text="{fa-retweet}"
            android:textColor="#737373"
            android:textSize="18sp"
            android:layout_marginRight="10dp"
            android:minHeight="1dp"
            android:minWidth="1dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_border_feedient"
            android:text="Comment"
            android:layout_alignParentRight="true"
            android:textColor="#737373"
            android:textStyle="bold"
            android:textSize="16sp"
            android:minHeight="1dp"
            android:minWidth="1dp"/>

    </RelativeLayout>

</RelativeLayout>