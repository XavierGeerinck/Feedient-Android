<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Provider Selector Container -->
        <LinearLayout
            android:id="@+id/container_selected_providers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

        <!-- Select Providers Icon -->
        <IconTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="{fa-chevron-down}"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <!-- Message composing -->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Footer -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dialog_compose_footer">

        <!-- Attach Picture -->
        <IconTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="{fa-camera}"
            android:textColor="@color/dialog_compose_attach_picture"
            android:textSize="@dimen/dialog_compose_attach_picture"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">

            <!-- Remaining Count -->
            <LinearLayout
                android:id="@+id/container_remaining_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <IconTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="{fa-twitter-square}"/>

                <TextView
                    android:id="@+id/txt_remaining_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50"/>
            </LinearLayout>

            <!-- Send -->
            <IconTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="{fa-send}"
                android:textSize="@dimen/dialog_compose_send"
                android:textColor="@color/dialog_compose_send"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>